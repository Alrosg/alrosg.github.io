    .decoration-triangle {
      width: 0;
      height: 0;
      border-left: 70px solid transparent;
      border-right: 70px solid transparent;
      border-bottom: 120px solid var(--accent);
      bottom: 10%;
      left: 20%;
      opacity: 0.1;
      animation: float 12s ease-in-out infinite;
      animation-delay: 2s;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
